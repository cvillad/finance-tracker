<div class="row">
  <div class="col-9">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td>
            <%= link_to "View profile", friend, class: "btn btn-sm btn-success" %>
            <%= link_to "Stop following", friendship_path(friend), method: :delete, class: "btn btn-sm btn-warning",
             data: {confirm: "Are you sure?"} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="results-block">
  <%= render "layouts/messages" %>
</div>
<% if !@friends.empty? %>
  <div class="card card-header results-block mb-3">
    <table class="col-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><%= link_to "View profile", friend, class: "btn btn-sm btn-success" %>
            <% if current_user.not_friends_with?(friend.id) %>
              <%= link_to "Follow", friendships_path(friend: friend), method: :post, class: "btn btn-sm btn-success" %>
            <% else %>
              <span class="badge badge-secondary">You are already friends</span>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

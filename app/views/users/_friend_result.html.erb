<div class="results-block">
  <%= render "layouts/messages" %>
</div>
<% if !@friends.empty? %>
  <div class="card card-header results-block mb-3">
    <table class="col-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><%= link_to "View profile", "#", class: "btn btn-sm btn-success" %>
            <%= link_to "Follow", "#", class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
